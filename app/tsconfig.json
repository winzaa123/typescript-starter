{
  "compilerOptions": {
    "target": "es2018",                          
    "module": "commonjs",  
    "moduleResolution": "node",                  
    "lib": ["es2018"],                     
    "allowJs": true,
    "outDir": "build",   
    "rootDir": "src",                       
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true 
  },
"exclude": [
    "node_modules",
    "**/*.spec.ts",
    "linux.config.js",
    "tsconfig.json",
    "build"
]
}